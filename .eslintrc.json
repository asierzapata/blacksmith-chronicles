{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8
	},
	"plugins": [
		"promise",
		"prettier",
		"jsx-a11y",
		"eslint-plugin-cypress",
		"react-hooks",
		"jest-dom",
		"testing-library"
	],
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react",
		"plugin:jsx-a11y/strict",
		"plugin:jest-dom/recommended",
		"plugin:testing-library/recommended"
	],
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true,
		"mocha": true,
		"jest": true,
		"cypress/globals": true
	},
	"globals": {
		"document": false,
		"navigator": false,
		"window": false,
		"App": false
	},
	"rules": {
		"strict": 0,
		"no-restricted-properties": [
			1,
			{
				"object": "describe",
				"property": "only"
			},
			{
				"object": "it",
				"property": "only"
			}
		],
		"no-restricted-modules": [
			"error",
			{
				"paths": [
					{
						"name": "when/parallel",
						"message": "Please use when/sequence instead"
					}
				]
			}
		],
		"promise/catch-or-return": [
			2,
			{
				"allowThen": true,
				"terminationMethod": ["done", "catch"]
			}
		],
		"promise/no-return-wrap": 2,
		"promise/param-names": 2,
		"promise/always-return": 2,
		"promise/no-nesting": 2,
		"promise/no-promise-in-callback": 2,
		"promise/no-callback-in-promise": 2,
		"import/no-extraneous-dependencies": 0,
		"import/extensions": 0,
		"import/no-unresolved": 0,
		"import/prefer-default-export": 0,
		"max-classes-per-file": ["error", 2],

		"func-names": 0,
		"consistent-return": 0,
		"no-underscore-dangle": 0,
		"no-use-before-define": 0,
		"no-case-declarations": 0,
		"no-fallthrough": 0,
		"default-case": 0,
		"prefer-destructuring": 0,
		"no-useless-return": 0,
		"no-unused-expressions": 0,
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"react/jsx-props-no-spreading": [
			0,
			{
				"html": "ignore",
				"custom": "ignore"
			}
		],
		"react/no-multi-comp": 0,
		"prettier/prettier": "error",
		"react/sort-comp": [
			1,
			{
				"order": ["static-methods", "instance-variables", "lifecycle", "everything-else", "rendering"],
				"groups": {
					"rendering": ["/^render.+$/", "render"]
				}
			}
		],
		"react/forbid-prop-types": 0,
		"react/no-did-update-set-state": 0,
		"import/first": 0,
		"arrow-body-style": 0,
		"react/destructuring-assignment": 0,
		"lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
		"jsx-a11y/label-has-for": 0,
		"jsx-a11y/label-has-associated-control": [
			2,
			{
				"assert": "either",
				"controlComponents": ["RadioButton"]
			}
		],
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn",
		"react/jsx-fragments": [0, "syntax"]
	}
}
